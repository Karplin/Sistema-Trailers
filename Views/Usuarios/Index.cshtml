@model TrailersWeb.Models.usuario

<link href="~/Content/master.css" rel="stylesheet" />

@{
    ViewBag.Title = "Login";
}

<script type="text/javascript">
    $(document).ready(function () {
        if ($('#popupdiv').html() != '') {
            $("#popupdiv").show();
        }
    });
</script>

@using (Html.BeginForm())

{

    @Html.AntiForgeryToken()


    if (@ViewBag.Mensaje != null)
    {
        <div id="popupdiv" style="border: 2px solid red; background-color:white; display: none;">
            @ViewBag.Mensaje
        </div>

    }

    <body>

        <div class="login-box">
            <img src="~/img/claqueta.png" class="avatar" alt="Avatar Image">
            <form>
                @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.usuario1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuario1, "", new { @class = "text-danger" })

                @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.clave, new { htmlAttributes = new { type = "password", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })

                <input type="submit" value="Iniciar Sesión" class="btn btn-default" />
                
                <a>@Html.ActionLink("¿No eres Administrador? Click Aquí", "Ver", "Trailer")</a>

            </form>
        </div>

    </body>



}